{
	"compilerOptions": {
		"incremental": true,
		"target": "es2016",
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"baseUrl": "./src",
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@/*": ["*"],
			"@api/*": ["api/*"],
			"@config/*": ["config/*"],
			"@interfaces/*": ["interfaces/*"],
			"@middlewares/*": ["middlewares/*"],
			"@utils/*": ["utils/*"],
			"@services/*": ["services/*"],
			"@dtos/*": ["dtos/*"],
			"@exceptions/*": ["exceptions/*"],
			"@tests/*": ["tests/*"],
			"@helpers/*": ["helpers/*"]
		},
		"resolveJsonModule": true,
		"allowJs": true,
		"outDir": "./dist",
		"noEmit": false,
		"esModuleInterop": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"skipLibCheck": true,
		"noImplicitAny": false,
		"types": [
			"node",
			"jest"
		]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
